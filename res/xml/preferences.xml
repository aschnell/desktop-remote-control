<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Server">

    <EditTextPreference
	android:key="name"
	android:title="Name"
	android:inputType="textUri"
	android:defaultValue="192.168.178.23"
	android:dialogTitle="Set server name"/>

    <EditTextPreference
	android:key="port"
	android:title="Port"
	android:inputType="number"
	android:defaultValue="51203"
	android:dialogTitle="Set server port"/>

  </PreferenceCategory>

</PreferenceScreen>
